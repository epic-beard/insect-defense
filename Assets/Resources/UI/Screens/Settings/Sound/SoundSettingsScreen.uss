.sound-settings-screen-container {
    flex-grow: 1;
    min-width: auto;
    min-height: auto;
    border-color: #555555;
    border-width: 2px;
    border-radius: 8px;
    background-color: #333333;
}

.volume-slider {
    min-height: auto;
    color: #ffffff;
}

.volume-label {
    width: 50px;
    padding-left: 5px;
}

.play-sfx-button {
  width: 50%;
  margin: 0;
  margin-left: auto;
  margin-right: auto;
  padding-left: 0;
  padding-right: 0;
}
