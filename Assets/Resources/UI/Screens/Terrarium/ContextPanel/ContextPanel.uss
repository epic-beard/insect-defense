.no-detail {
    color: #e75900;
}

.no-detail-label {
    text-overflow: clip;
    -unity-font-definition: url('/Assets/Font/MetalOnMetal-OBo SDF.asset');
    -unity-text-align: upper-center;
}

.no-detail,
.tower-detail,
.enemy-detail {
  transition-property: display, translate;
  transition-duration: 0.15s;
}

.context-sub-panel-expanded {
    display: flex;
    translate: 0;
    transition-timing-function: ease-out;
    transition-delay: 0.15s;
}

.context-sub-panel-collapsed {
    display: none;
    translate: 400px 0;
    transition-timing-function: ease-in;
    transition-delay: 0;
}
