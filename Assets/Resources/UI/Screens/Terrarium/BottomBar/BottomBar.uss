.bottom-bar-container {
    justify-content: flex-end;
    width: 100%;
    color: #fff80d;
}

.controls-container {
    display: flex;
    flex-direction: row;
    margin-left: auto;
    margin-right: auto;
}

.game-speed-dial {
    display: flex;
    flex-direction: row;
    width: 150px;
    height: 120px;
    background-color: rgba(0, 0, 0, 0);
    background-image: resource("UI/images/bgs/speed_dial_base_texture_0");
    border-width: 2px;
    border-color: #333333;
    border-radius: 2px;
}

.game-speed-dial-pointer {
    position: absolute;
    width: 39px;
    height: 80px;
    left: 55px;
    top: 38px;
    background-image: resource("UI/images/bgs/speed_dial_pointer_texture_0");
    rotate: -72deg;

    transition-property: rotate;
    transition-duration: var(--animation-duration-short);
    transition-timing-function: ease-out;
}

.game-speed-dial-pointer-0 {
    rotate: -72deg;
}

.game-speed-dial-pointer-1 {
    rotate: -25deg;
}

.game-speed-dial-pointer-2 {
    rotate: 42deg;
}

.game-speed-dial-pointer-4 {
    rotate: 88deg;
}

.game-speed-container {
    width: 38px;
    height: 100%;
}

.game-speed-button {
    width: 100%;
    height: 100%;
    margin: 0;
    padding: 0;
    background-color: rgba(0, 0, 0, 0);
    border-width: 0px;
}

.game-speed-light {
    position: absolute;
    width: 10px;
    height: 10px;
    background-color: rgba(0, 0, 0, 0);
    background-image: resource("UI/images/bgs/red_bulb_unlit_texture_0");
}

.game-speed-container:hover .game-speed-light {
    background-image: resource("UI/images/bgs/red_bulb_lit_texture_0");
}

.game-speed-0-light {
    left: 7px;
    top: 58px;
}

.game-speed-1-light {
    left: 7px;
    top: 25px;
}

.game-speed-2-light {
    left: 25px;
    top: 25px;
}

.game-speed-3-light {
    left: 24px;
    top: 58px;
}

.settings-button {
    position: absolute;
    right: 0px;
    width: 48px;
    height: 48px;
    border-width: 0;
    background-color: rgba(0, 0, 0, 0);
    background-image: resource("UI/images/bgs/rusty_cog_texture_0");
    transition-property: rotate;
    transition-timing-function: ease-in-out;
    transition-duration: var(--animation-duration-short);
}

.settings-button:hover {
    rotate: 90deg;
}
