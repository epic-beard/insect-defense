.tower-upgrade-tree {
    justify-content: space-around;
}

.tower-upgrade-tree > .upgrade-button {
    justify-content: center;
    align-items: center;
}

.upgrade-button {
    width: 48px;
    height: 48px;
    padding: 2px 2px;
    font-size: 12px;
    border-radius: 4px;
}

.upgrade-button .tooltip-button {
    background-color: rgba(0, 0, 0, 0);
    border-width: 0;
    padding: 0;
    margin: 0;
    -unity-text-align: middle-center;
}
